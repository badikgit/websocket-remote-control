{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./*"
      ]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "front"
  ]
}
